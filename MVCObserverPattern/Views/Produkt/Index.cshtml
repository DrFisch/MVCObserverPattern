@model List<MVCObserverPattern.Models.Produkt>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">Produktverwaltung</h2>

        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Produktname</th>
                    <th>Preis (€)</th>
                    <th>Lagerbestand</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produkt in Model)
                {
                    <tr>
                        <td>@produkt.Name</td>
                        <td>@produkt.Preis</td>
                        <td>@produkt.Lagerbestand</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Produktdetails aktualisieren</h3>
        <form asp-action="Aktualisieren" method="post" class="row g-3">
            <div class="col-md-6">
                <label for="name" class="form-label">Produktname</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="col-md-3">
                <label for="preis" class="form-label">Neuer Preis (€)</label>
                <input type="number" class="form-control" id="preis" name="preis" step="0.01" required>
            </div>
            <div class="col-md-3">
                <label for="lagerbestand" class="form-label">Neuer Lagerbestand</label>
                <input type="number" class="form-control" id="lagerbestand" name="lagerbestand" required>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Aktualisieren</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
